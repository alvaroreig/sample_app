<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/fragmentStoreDetails"
        android:name="com.galileo.cursoandroid.fragments.StoreDetailsFragment"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <fragment
        android:id="@+id/fragmentCommentsStore"
        android:name="com.galileo.cursoandroid.fragments.CommentsFragment"
        android:layout_weight="2.75"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>